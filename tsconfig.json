{
  "compilerOptions": {
    "lib": ["es2021"], // Ignore this warning, it doesn't know about es2021 yet
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "tsconfig",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}